{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 21",
  "_version": "21.0.0",

  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "node16",
    "target": "es2022",
    "jsx": "react-jsx",
    "paths": {
      "components": ["src/components/*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  }
}
